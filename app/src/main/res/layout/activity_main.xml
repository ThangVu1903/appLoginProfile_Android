<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c7ecee"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/login"
        android:layout_marginTop="120dp"
        android:id="@+id/iconLogin"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vũ Đình Thắng  2050531200337"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_below="@id/iconLogin"
        android:layout_marginTop="10dp"
        android:paddingHorizontal="120dp"

        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="UserName"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="#ffffff"
        android:id="@+id/username"
        android:layout_below="@id/iconLogin"
        android:paddingVertical="20dp"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_baseline_person_30"
        android:drawablePadding="10dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password..."
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:background="#ffffff"
        android:id="@+id/password"
        android:layout_below="@id/username"
        android:paddingVertical="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:drawableLeft="@drawable/ic_baseline_info_24"
        android:drawablePadding="10dp"
        />
    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGIN ME"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:background="@color/black"
        android:layout_below="@id/password"
        android:paddingVertical="10dp"
        android:layout_marginTop="70dp"
        android:layout_marginHorizontal="20dp"
        android:paddingHorizontal="100dp"
        android:id="@+id/LoginMe"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lost password?"
        android:paddingLeft="30dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:layout_below="@id/LoginMe"
        android:layout_marginTop="70dp"
        android:paddingHorizontal="135dp"
        />



</RelativeLayout>